<h2>Show Event</h2>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @event.name %>
  </li>

  <li>
    <strong>Active:</strong>
    <%= @event.active %>
  </li>

</ul>

<span><%= link "Edit", to: event_path(@conn, :edit, @event.id) %></span>
<span><%= link "Back", to: event_path(@conn, :index) %></span>

<h2>Weekends for Event</h2>
<ul>
  <%= for weekend <- @event.weekends do %>
  <li> <%= link "test", to: event_weekend_path(@conn, :index, @event.id) %></li>
  <% end %>
</ul>

